{
  "description": "Renews Continuous job Ids on an EC2 instance",
  "schemaVersion": "2.2",
  "parameters": {
    "HANASID": {
      "type": "String",
      "default": "None",
      "allowedPattern": "[A-Za-z0-9]{3}|None"
    },
    "HANAInstanceNum": {
      "type": "String",
      "default": "None",
      "allowedPattern": "^[0-9]{2}$|None"
    },
    "HANADatabaseName": {
      "type": "String",
      "allowedPattern": "^[a-zA-Z0-9_\\-\\/]*$",
      "maxChars": 150
    },
    "HANASecretId": {
      "type": "String",
      "default": "''",
      "allowedPattern": "^[a-zA-Z0-9\"\\'\\[\\]\\{\\}\\/\\-_:+=\\.@]*$",
      "maxChars": 128
    },
    "HANASecretRegion": {
      "type": "String",
      "allowedPattern": "^[a-z0-9\\-]*$",
      "maxChars": 30
    },
    "Host": {
      "type": "String",
      "allowedPattern": "^[\\w-.]{0,100}"
    },
    "OperationType": {
      "type": "String",
      "allowedValues": [
        "Backup",
        "Restore"
      ]
    },
    "HanaBackupRestoreId": {
      "type": "String",
      "allowedPattern": "^[a-zA-Z0-9]{5,15}$"
    },
    "BackupSize": {
      "type": "String",
      "default": "0",
      "allowedPattern": "^[0-9]*(\\.[0-9]+)?$"
    },
    "BaseChecksum": {
      "type": "String",
      "default": "None",
      "allowedPattern": "^[a-zA-Z0-9\\-_=]{1,50}$",
      "maxChars": 50
    },
    "AdoptHdbcli": {
      "type": "String",
      "default": "True",
      "allowedValues": [
        "True",
        "False"
      ]
    },
    "Debug": {
      "type": "String",
      "default": "False",
      "allowedValues": [
        "True",
        "False"
      ]
    }
  },
  "mainSteps": [
    {
      "name": "InstallPackage",
      "action": "aws:runDocument",
      "inputs": {
        "documentType": "SSMDocument",
        "documentPath": "AWS-ConfigureAWSPackage",
        "documentParameters": {
          "name": "arn:aws:ssm:us-east-1:107954469871:document/AWSSystemsManagerSAP-Support",
          "action": "Install",
          "installationType": "Uninstall and reinstall"
        }
      }
    },
    {
      "name": "InstallPackageAgain",
      "action": "aws:runDocument",
      "inputs": {
        "documentType": "SSMDocument",
        "documentPath": "AWS-ConfigureAWSPackage",
        "documentParameters": {
          "name": "arn:aws:ssm:us-east-1:107954469871:document/AWSSystemsManagerSAP-Support",
          "action": "Install",
          "installationType": "Uninstall and reinstall"
        }
      }
    },
    {
      "name": "PerformAction",
      "action": "aws:runShellScript",
      "inputs": {
        "RunCommand": [
          "#!/bin/bash",
          "# Timestamp: 1725643014452",
          "mkdir -p /usr/bin/ssm-sap/logs",
          "cd /usr/bin/ssm-sap/logs",
          "export PYTHONPATH=$PYTHONPATH:/usr/bin/ssm-sap/scripts",
          "if [ $(which python3 3>/dev/null) ]; then",
          "  PYTHON_BIN=$(whereis python3 | tr ' ' '\\n' | grep '/bin/python3' | cut -d ':' -f 2 | while read -r python_executable; do",
          "   if [[ -x \"$python_executable\" ]]; then",
          "       if [[ $(basename $python_executable) =~ ^python3(\\.[0-9]+)?$ ]]; then",
          "           python_version=$($python_executable --version 2>&1 | awk '{print $2}')",
          "           echo \"$python_version $python_executable\"",
          "       fi",
          "   fi",
          "  done | sort -V | tail -1 | awk '{print $2}')",
          "else",
          "   exit 1",
          "fi",
          "if less /etc/os-release | grep 'suse' > /dev/null; then",
          "   _PYTHON_BIN=$(which python3.11 2>/dev/null | while read -r python_executable; do",
          "       if [[ $(basename $python_executable) == \"python3.11\" ]]; then",
          "           python_version=$($python_executable --version 2>&1 | awk '{print $2}')",
          "           echo \"$python_version $python_executable\"",
          "       fi",
          "   done | sort -V | tail -1 | awk '{print $2}')",
          "   if [[ -n $_PYTHON_BIN ]]; then",
          "       PYTHON_BIN=$_PYTHON_BIN",
          "   fi",
          "fi",
          "PYTHON_VERSION=$($PYTHON_BIN --version 2>&1 | awk '{print $2}' | cut -d '.' -f 1,2)",
          "$(dirname $PYTHON_BIN)/pip${PYTHON_VERSION} install boto3",
          "if [[ \"{{Debug}}\" == \"True\" ]]; then",
          "   DEBUGMODE='--debug'",
          "else",
          "   DEBUGMODE=''",
          "fi",
          "touch ~/.bashrc && source ~/.bashrc",
          "if [[ \":$PYTHONPATH:\" != *\":/usr/bin/ssm-sap/scripts/dependencies\"* ]]; then",
          "   sed -i 's#://usr/bin/ssm-sap/scripts/dependencies##' ~/.bashrc",
          "   echo export PYTHONPATH='${PYTHONPATH}:/usr/bin/ssm-sap/scripts/dependencies' >> ~/.bashrc",
          "   source ~/.bashrc",
          "fi",
          "$PYTHON_BIN /usr/bin/ssm-sap/scripts/oldscripts/backupRestoreStatus/HanaBackupRestoreStatus.py --sid '{{HANASID}}' --instanceNumber '{{HANAInstanceNum}}' --databaseName '{{HANADatabaseName}}' --credentials '{{HANASecretId}}' --region '{{HANASecretRegion}}' --hostName '{{Host}}' --type '{{OperationType}}' --backupRestoreId '{{HanaBackupRestoreId}}' --baseChecksum='{{BaseChecksum}}' --backupSize '{{BackupSize}}' $DEBUGMODE"
        ],
        "TimeoutSeconds": "600"
      }
    }
  ]
}
