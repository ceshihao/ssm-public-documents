{
  "schemaVersion": "2.2",
  "description": "Configure an instance to work with containers and Docker",
  "parameters": {
    "action": {
      "type": "String",
      "description": "The type of action to perform.",
      "allowedValues": [
        "Install",
        "Uninstall"
      ]
    }
  },
  "mainSteps": [
    {
      "action": "aws:runPowerShellScript",
      "name": "Cleanup",
      "precondition": {
        "StringEquals": [
          "platformType",
          "Windows"
        ]
      },
      "inputs": {
        "runCommand": [
          "  $TempFolder = \"/\"",
          "  if ( $env:Temp -ne $null ) {",
          "    $TempFolder = $env:Temp",
          "  }",
          " $none = Remove-Item (Join-Path $TempFolder '7a9c516e7a710e2a290ccf30fb5a46f2fdd99d10') -Force 2>&1",
          " $none = Remove-Item (Join-Path $TempFolder '7a9c516e7a710e2a290ccf30fb5a46f2fdd99d10.etag') -Force 2>&1"
        ]
      }
    },
    {
      "action": "aws:configureDocker",
      "name": "ConfigureDocker",
      "inputs": {
        "action": "{{ action }}"
      }
    }
  ]
}
