{
  "schemaVersion": "0.3",
  "description": "Configures CloudTrail Logging",
  "assumeRole": "{{ AutomationAssumeRole }}",
  "parameters": {
    "CloudTrailArn": {
      "type": "String",
      "description": "(Required) ARN for the CloudTrail"
    },
    "StartLogging": {
      "description": "(Optional) When true process initiates CloudTrail Logging, when false process ends CloudTrail Logging",
      "type": "String",
      "default": "True",
      "allowedValues": [
        "True",
        "False"
      ]
    },
    "AutomationAssumeRole": {
      "type": "String",
      "description": "(Optional) The ARN of the role that allows Automation to perform the actions on your behalf",
      "default": ""
    }
  },
  "mainSteps": [
    {
      "name": "GetCloudTrailStatus",
      "action": "aws:assertAwsResourceProperty",
      "isCritical": false,
      "inputs": {
        "Service": "cloudtrail",
        "Api": "GetTrailStatus",
        "Name": "{{CloudTrailArn}}",
        "PropertySelector": "$.IsLogging",
        "DesiredValues": [
          "{{StartLogging}}"
        ]
      },
      "onFailure": "step:AscertainOperation",
      "nextStep": "End"
    },
    {
      "name": "AscertainOperation",
      "action": "aws:assertAwsResourceProperty",
      "isCritical": false,
      "inputs": {
        "Service": "cloudtrail",
        "Api": "GetTrailStatus",
        "Name": "{{CloudTrailArn}}",
        "PropertySelector": "$.IsLogging",
        "DesiredValues": [
          "False"
        ]
      },
      "nextStep": "EnableLogging",
      "onFailure": "step:DisableLogging"
    },
    {
      "name": "EnableLogging",
      "action": "aws:executeAwsApi",
      "inputs": {
        "Service": "cloudtrail",
        "Api": "StartLogging",
        "Name": "{{CloudTrailArn}}"
      },
      "isEnd": true
    },
    {
      "name": "DisableLogging",
      "action": "aws:executeAwsApi",
      "inputs": {
        "Service": "cloudtrail",
        "Api": "StopLogging",
        "Name": "{{CloudTrailArn}}"
      },
      "isEnd": true
    },
    {
      "name": "End",
      "action": "aws:sleep",
      "inputs": {
        "Duration": "PT1S"
      }
    }
  ]
}
