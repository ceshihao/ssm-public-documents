{
  "schemaVersion": "1.0",
  "description": "Document to run single non-interactive command on an instance with control of logging",
  "sessionType": "NonInteractiveCommands",
  "parameters": {
    "s3BucketName": {
      "type": "String",
      "description": "S3 bucket for logging",
      "allowedPattern": "^$",
      "default": ""
    },
    "s3KeyPrefix": {
      "type": "String",
      "description": "S3 prefix for logging",
      "allowedPattern": "^$",
      "default": ""
    },
    "s3EncryptionEnabled": {
      "type": "String",
      "description": "Enable S3 Encryption",
      "allowedValues": [
        "true",
        "false"
      ],
      "default": "false"
    },
    "cloudWatchLogGroupName": {
      "type": "String",
      "description": "Cloud watch log group name for logging",
      "allowedPattern": "^$",
      "default": ""
    },
    "cloudWatchEncryptionEnabled": {
      "type": "String",
      "description": "Enable Cloudwatch Encryption",
      "allowedValues": [
        "true",
        "false"
      ],
      "default": "false"
    },
    "kmsKeyId": {
      "type": "String",
      "description": "KMS key for encryption",
      "allowedPattern": "^$",
      "default": ""
    },
    "command": {
      "type": "String",
      "description": "The command to run on the instance",
      "allowedPattern": ".+"
    }
  },
  "inputs": {
    "s3BucketName": "{{s3BucketName}}",
    "s3KeyPrefix": "{{s3KeyPrefix}}",
    "s3EncryptionEnabled": "{{s3EncryptionEnabled}}",
    "cloudWatchLogGroupName": "{{cloudWatchLogGroupName}}",
    "cloudWatchEncryptionEnabled": "{{cloudWatchEncryptionEnabled}}",
    "kmsKeyId": "{{kmsKeyId}}"
  },
  "properties": {
    "windows": {
      "commands": "{{command}}",
      "runAsElevated": false
    },
    "linux": {
      "commands": "{{command}}",
      "runAsElevated": false
    }
  }
}
