{
  "description": "This Run Command SSM Doc discovers configurations on the specified SAP application based on parameters given.",
  "schemaVersion": "2.2",
  "parameters": {
    "HANASID": {
      "type": "String",
      "default": "None",
      "allowedPattern": "[A-Za-z0-9]{3}|None"
    },
    "ConfigurationCheckType": {
      "type": "String",
      "allowedValues": [
        "SAP_CHECK_01",
        "SAP_CHECK_02",
        "SAP_CHECK_03"
      ]
    },
    "AdoptHdbcli": {
      "type": "String",
      "default": "True",
      "allowedValues": [
        "True",
        "False"
      ]
    },
    "Debug": {
      "type": "String",
      "default": "False",
      "allowedValues": [
        "True",
        "False"
      ]
    },
    "ApplicationType": {
      "type": "String",
      "default": "HANA",
      "allowedValues": [
        "HANA",
        "SAP_ABAP"
      ]
    },
    "HANAInstanceNum": {
      "type": "String",
      "default": "None",
      "allowedPattern": "^[0-9]{2}$|None"
    },
    "HANASecretId": {
      "type": "String",
      "default": "None",
      "allowedPattern": "^[a-zA-Z0-9/_+=.@\\-\\[\\]]*$",
      "maxChars": 128
    }
  },
  "mainSteps": [
    {
      "name": "InstallPackage",
      "action": "aws:runDocument",
      "inputs": {
        "documentType": "SSMDocument",
        "documentPath": "AWS-ConfigureAWSPackage",
        "documentParameters": {
          "name": "arn:aws:ssm:us-east-1:107954469871:document/AWSSystemsManagerSAP-Support",
          "action": "Install",
          "installationType": "Uninstall and reinstall"
        }
      }
    },
    {
      "name": "InstallPackageAgain",
      "action": "aws:runDocument",
      "inputs": {
        "documentType": "SSMDocument",
        "documentPath": "AWS-ConfigureAWSPackage",
        "documentParameters": {
          "name": "arn:aws:ssm:us-east-1:107954469871:document/AWSSystemsManagerSAP-Support",
          "action": "Install",
          "installationType": "Uninstall and reinstall"
        }
      }
    },
    {
      "name": "PerformAction",
      "action": "aws:runShellScript",
      "inputs": {
        "RunCommand": [
          "#!/bin/bash",
          "# Timestamp: 1756417697927",
          "mkdir -p /usr/bin/ssm-sap/logs",
          "cd /usr/bin/ssm-sap/logs",
          "export PYTHONPATH=$PYTHONPATH:/usr/bin/ssm-sap/scripts",
          "source ../util.sh",
          "PYTHON_BIN=$(highest_python)",
          "\"$PYTHON_BIN\" -m ensurepip --upgrade",
          "\"$PYTHON_BIN\" -m pip install boto3 --upgrade --retries 2",
          "if [[ \"{{Debug}}\" == \"True\" ]]; then",
          "   DEBUGMODE='--debug'",
          "else",
          "   DEBUGMODE=''",
          "fi",
          "touch ~/.bashrc && source ~/.bashrc",
          "if [[ \":$PYTHONPATH:\" != *\":/usr/bin/ssm-sap/scripts/dependencies\"* ]]; then",
          "   sed -i 's#://usr/bin/ssm-sap/scripts/dependencies##' ~/.bashrc",
          "   echo export PYTHONPATH='${PYTHONPATH}:/usr/bin/ssm-sap/scripts/dependencies' >> ~/.bashrc",
          "   source ~/.bashrc",
          "fi",
          "if [[ \"{{AdoptHdbcli}}\" == True ]]; then",
          "   sh /usr/bin/ssm-sap/scripts/export_hdbcli.sh {{HANASID}}",
          "   source /root/.bashrc",
          "   old_script_subdir=''",
          "else",
          "   old_script_subdir='/oldscripts'",
          "fi",
          "$PYTHON_BIN /usr/bin/ssm-sap/scripts${old_script_subdir}/configurationChecks/discover_configuration.py --sid {{HANASID}} --configurationCheckType '{{ConfigurationCheckType}}' --applicationType '{{ApplicationType}}' --instanceNum '{{HANAInstanceNum}}' --credentials '{{HANASecretId}}'"
        ],
        "TimeoutSeconds": "600"
      }
    }
  ]
}
