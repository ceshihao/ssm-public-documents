{
  "schemaVersion": "1.0",
  "templateBody": {
    "Parameters": {
      "QSType": {
        "Type": "String",
        "Description": "(Required) Specifies whether the Quick Setup applies to the local account or an AWS organization.",
        "AllowedValues": [
          "TA",
          "DA"
        ]
      },
      "QSConfigurationId": {
        "Type": "String",
        "Description": "(Required) Unique identifier of the deployed configuration."
      },
      "QSPrincipalOrgId": {
        "Type": "String",
        "Default": "",
        "Description": "(Optional) The ID of the principal organization your management account operates in."
      },
      "DelegatedAccountId": {
        "Type": "String",
        "AllowedPattern": "^\\d{12}$",
        "Description": "(Required) The ID of the member account in your organization you want to register as a delegated administrator."
      },
      "JobFunction": {
        "Type": "String",
        "AllowedPattern": "^\\w{1,10}$",
        "Description": "(Required) SSM Change Manager job function name"
      },
      "PermissionType": {
        "Type": "String",
        "AllowedValues": [
          "CustomPermissions",
          "AdminPermissions"
        ],
        "Default": "CustomPermissions"
      },
      "CustomPermissions": {
        "Type": "String",
        "Default": "",
        "Description": "(Required if CustomPermissions passed as PermissionType) SSM Change Manager job function permissions"
      }
    },
    "Conditions": {
      "IsDelegatedAdminAccount": {
        "Fn::Equals": [
          {
            "Ref": "DelegatedAccountId"
          },
          {
            "Ref": "AWS::AccountId"
          }
        ]
      }
    },
    "Resources": {
      "RoleForAutomation": {
        "Type": "AWS::IAM::Role",
        "Properties": {
          "RoleName": {
            "Fn::Join": [
              "",
              [
                "AWS-QuickSetup-EnableExplorer-DA-",
                {
                  "Ref": "QSConfigurationId"
                },
                "_",
                {
                  "Ref": "AWS::Region"
                }
              ]
            ]
          },
          "AssumeRolePolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Principal": {
                  "Service": [
                    "ssm.amazonaws.com"
                  ]
                },
                "Action": [
                  "sts:AssumeRole"
                ],
                "Condition": {
                  "StringEquals": {
                    "aws:SourceAccount": {
                      "Fn::Sub": "${AWS::AccountId}"
                    }
                  },
                  "ArnLike": {
                    "aws:SourceArn": {
                      "Fn::Sub": "arn:${AWS::Partition}:ssm:${AWS::Region}:${AWS::AccountId}:automation-execution/*"
                    }
                  }
                }
              }
            ]
          },
          "ManagedPolicyArns": [
            {
              "Fn::Sub": "arn:${AWS::Partition}:iam::aws:policy/AWSSystemsManagerEnableExplorerExecutionPolicy"
            }
          ]
        }
      },
      "SystemAssociationForEnablingExplorer": {
        "Type": "AWS::SSM::Association",
        "Properties": {
          "Name": "AWS-EnableExplorer",
          "AssociationName": {
            "Fn::Join": [
              "",
              [
                "AWS-QuickSetup-SSMChangeMgr-DA-EnableExplorer-",
                {
                  "Ref": "QSConfigurationId"
                }
              ]
            ]
          },
          "Parameters": {
            "AutomationAssumeRole": [
              {
                "Fn::GetAtt": [
                  "RoleForAutomation",
                  "Arn"
                ]
              }
            ],
            "OpsDataSources": [
              "Association"
            ]
          }
        }
      },
      "SSMChangeMgrAdminRole": {
        "Type": "AWS::IAM::Role",
        "Properties": {
          "AssumeRolePolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Principal": {
                  "Service": "ssm.amazonaws.com"
                },
                "Action": "sts:AssumeRole"
              }
            ]
          },
          "Path": "/",
          "Policies": [
            {
              "PolicyDocument": {
                "Version": "2012-10-17",
                "Statement": [
                  {
                    "Effect": "Allow",
                    "Action": [
                      "sts:AssumeRole"
                    ],
                    "Condition": {
                      "StringEquals": {
                        "aws:SourceAccount": {
                          "Fn::Sub": "${AWS::AccountId}"
                        }
                      },
                      "ArnLike": {
                        "aws:SourceArn": {
                          "Fn::Sub": "arn:${AWS::Partition}:ssm:*:${AWS::AccountId}:automation-execution/*"
                        }
                      }
                    },
                    "Resource": {
                      "Fn::Join": [
                        "",
                        [
                          "arn:",
                          {
                            "Ref": "AWS::Partition"
                          },
                          ":iam::*:role/AWS-QuickSetup-SSMChangeMgr-",
                          {
                            "Ref": "JobFunction"
                          },
                          "InvocationRole"
                        ]
                      ]
                    }
                  },
                  {
                    "Effect": "Allow",
                    "Action": [
                      "organizations:ListAccountsForParent"
                    ],
                    "Resource": [
                      "*"
                    ]
                  }
                ]
              },
              "PolicyName": {
                "Fn::Join": [
                  "",
                  [
                    {
                      "Ref": "JobFunction"
                    },
                    "AdminRolePolicy"
                  ]
                ]
              }
            }
          ],
          "RoleName": {
            "Fn::Join": [
              "",
              [
                "AWS-QuickSetup-SSMChangeMgr-",
                {
                  "Ref": "JobFunction"
                },
                "AdminRole"
              ]
            ]
          }
        },
        "Condition": "IsDelegatedAdminAccount"
      }
    }
  }
}
